{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "VITE_NEWS_API_URL": "@vite_news_api_url"
  },
  "functions": {
    "api/news.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/news",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=600, stale-while-revalidate=1200"
        }
      ]
    }
  ]
}
